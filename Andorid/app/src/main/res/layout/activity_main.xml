<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativebutton"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_10sdp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            >
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Order List"
                android:textSize="@dimen/_12ssp"
                android:inputType="none"
                android:fontFamily="@font/poppinsregular"
                android:id="@+id/cb_ordelist"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_50sdp"
            android:text="Scan QR Surat"
            app:icon="@drawable/baseline_camera_enhance_24"
            app:cornerRadius="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#A9907E"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginEnd="@dimen/_10sdp"
            android:id="@+id/btn_scanqr"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:foreground="@drawable/hovereffect"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_below="@+id/relativebutton"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative2"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kunjungan Smk 1 Bali"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textSize="@dimen/_11ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum Selesai"
                android:id="@+id/text_status"
                android:fontFamily="@font/poppinsmedium"
                android:textSize="@dimen/_8ssp"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textColor="#FF0000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_status"
                android:id="@+id/liner2"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agenda :"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/robotomedium"
                    android:textSize="@dimen/_12ssp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/12/2023"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="@dimen/_10ssp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="@dimen/_10ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="@dimen/_10ssp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="->"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:textSize="@dimen/_12ssp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/12/2023"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="@dimen/_10ssp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="@dimen/_10ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="@dimen/_10ssp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/liner3"
                android:layout_below="@+id/liner2"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Dokumen :"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/robotomedium"
                    android:textSize="@dimen/_12ssp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/12/2023"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="@dimen/_10ssp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="@dimen/_10ssp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:fontFamily="@font/poppinsregular"
                    android:textSize="@dimen/_10ssp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/liner3">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:id="@+id/liner4"
                    android:layout_below="@+id/liner3"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal terima :"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/robotomedium"
                        android:textSize="@dimen/_12ssp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/12/2023"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="@dimen/_10ssp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="@dimen/_10ssp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:fontFamily="@font/poppinsregular"
                        android:textSize="@dimen/_10ssp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="@dimen/_10ssp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="List Penerima"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:fontFamily="@font/robotomedium"
                        android:id="@+id/btn_listPenerima"
                        android:textColor="#1306C1"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail Dokumen"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:textSize="@dimen/_10ssp"
                        app:cornerRadius="@dimen/_5sdp"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:id="@+id/btn_detailDoc"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>